// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // We Can Change The DB From Here
  url      = env("DATABASE_URL")
}

enum Role {
  BASIC
  ADMIN
}

model User {
  id              String         @id @default(uuid()) // Each Module Must Contain A Unique ID
  name            String
  age             Int? // Optional Key
  email           String         @unique
  skills          String[]
  userNumber      Int            @default(autoincrement())
  isAdmin         Boolean        @default(false)
  roles           Role           @default(BASIC)
  favPosts        Post[]         @relation("favPosts") // One To Many
  userPrefrence   UserPrefrence? @relation("userPrefrence", fields: [userPrefrenceId], references: [id])
  userPrefrenceId String?        @unique

  @@unique([name, age])
  @@index([email])
}

model Post {
  id String @id @default(uuid())

  title  String
  rating Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favPost   User?   @relation("favPosts", fields: [favPostId], references: [id])
  favPostId String?

  Catagory   Catagory? @relation(fields: [catagoryId], references: [id])
  catagoryId String?
}

// Many To Many Relation
model UserPrefrence {
  id           String  @id @default(uuid())
  emailUpdated Boolean
  user         User?   @relation("userPrefrence") // One To One
}

model Catagory {
  id    String @id @default(uuid())
  name  String @unique
  posts Post[]
}
